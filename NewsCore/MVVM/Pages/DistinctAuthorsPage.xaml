            <!-- ListView to display distinct authors --><!--
            <ListView ItemsSource="{Binding DistinctsListToView}">
               
                <ListView.ItemTemplate>
                    <DataTemplate  x:DataType="model:Distinct">
                            <TextCell Text="{Binding Content }"  FontAttributes="Bold"  />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>-->
            
      </Grid>   
    </ContentPage.Content>
 
</ContentPage>